# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{h,c,cpp,json,sh,bat,ps1}]
indent_style = tab
indent_size = 4

[CMakeLists.txt]
indent_style = space
indent_size = 2

[*.{yml,yaml,py}]
indent_style = space
indent_size = 2